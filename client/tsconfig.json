{
  "compilerOptions": {
    "target": "ES6", // Целевая версия JavaScript (ES6)
    "module": "ESNext", // Использование модулей ES
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Поддержка DOM и других библиотек
    "jsx": "react", // Включаем поддержку JSX
    "strict": true, // Включение строгой проверки типов
    "esModuleInterop": true, // Упрощение работы с CommonJS модулями
    "skipLibCheck": true, // Пропуск проверки типов в библиотеках
    "forceConsistentCasingInFileNames": true, // Проверка регистра имён файлов
    "outDir": "./dist", // Папка для скомпилированных файлов
    "moduleResolution": "node", // Разрешение модулей в стиле Node.js
    "resolveJsonModule": true, // Разрешение импорта JSON-файлов
    "isolatedModules": true, // Гарантирует, что каждый файл может быть скомпилирован отдельно
    "noEmit": false, // Разрешает генерацию JavaScript-файлов
    "experimentalDecorators": true, // Включаем поддержку декораторов
    "emitDecoratorMetadata": true, // Включаем метаданные для декораторов
    "baseUrl": ".", // Базовый путь для разрешения модулей
    "paths": {
      "@server/*": ["../server/src/*"] // Настройка алиасов для импорта из server/src
    }
  },
  "include": ["src/**/*"], // Включаем файлы из client/src
  "exclude": ["node_modules"] // Игнорируем node_modules
}
